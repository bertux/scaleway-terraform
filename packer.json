{
  "variables": {
    "instance_type": "START1-S",
    "image": "acf93867-88d9-40ee-99ea-6b2bb1ee8f0c",
    "region": "par1"
  },
  "builders": [
    {
      "server_name": "apache",
      "image_name": "ubuntu-apache",
      "snapshot_name": "ubuntu-apache-snapshot",
      "type": "scaleway",
      "image": "{{ user `image` }}",
      "region": "{{ user `region` }}",
      "commercial_type": "{{ user `instance_type` }}",
      "ssh_private_key_file": "~/.ssh/id_rsa",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
   {
     "type": "shell",
     "inline": [
         "sleep 30",
         "apt-get update",
         "apt-get -y upgrade",
         "apt-get install -y apache2"
     ]
   }
 ]
}
