{
  "variables": {
    "api_access_key": "{{ env `SCW_ACCESS_KEY` }}",
    "api_token": "{{ env `SCW_SECRET_KEY` }}",
  },
  "builders": [
    {
      "api_access_key": "{{ user `api_access_key` }}",
      "api_token": "{{ user `api_token` }}",
      "server_name": "apache",
      "image_name": "ubuntu-apache",
      "snapshot_name": "ubuntu-apache-snapshot",
      "type": "scaleway",
      "image": "acf93867-88d9-40ee-99ea-6b2bb1ee8f0c",
      "region": "par1",
      "commercial_type": "START1-S",
      "ssh_private_key_file": "~/.ssh/id_rsa",
      "ssh_username": "root"
    }
  ],
  "provisioners": [
   {
     "type": "shell",
     "inline": [
         "sleep 30",
         "apt-get update",
         "apt-get -y upgrade",
         "apt-get install -y apache2"
     ]
   }
 ]
}
